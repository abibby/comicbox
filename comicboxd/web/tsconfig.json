{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "target": "es6",
        "baseUrl": "./",
        "jsx": "preserve",
        "jsxFactory": "h",
        "paths": {
            "js/*": [
                "src/js/*"
            ],
            "css/*": [
                "src/css/*"
            ]
        },
        "experimentalDecorators": true,
        "pretty": true
    },
    "exclude": [
        "node_modules",
    ]
}