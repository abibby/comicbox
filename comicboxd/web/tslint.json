{
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "jsx-wrap-multiline": false,
        "jsx-alignment": true,
        "jsx-no-multiline-js": false,
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "object-literal-sort-keys": [
            true,
            "ignore-case",
            "match-declaration-order"
        ]
    }
}