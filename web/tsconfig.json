{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "target": "esnext",
        "baseUrl": "./",
        // "jsx": "preserve",
        "jsx": "react",
        "jsxFactory": "h",
        "paths": {
            "*": [
                "types/*"
            ],
            "js/*": [
                "src/js/*"
            ],
            "css/*": [
                "src/css/*"
            ],
            "lodash/*": [
                "node_modules/@types/lodash-es/*"
            ]
        },
        "experimentalDecorators": true,
        "pretty": true,
    },
    "exclude": [
        "node_modules",
    ]
}