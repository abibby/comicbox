{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "target": "esnext",
        "baseUrl": "./",
        // "jsx": "preserve",
        "jsx": "react",
        "jsxFactory": "h",
        "paths": {
            "*": [
                "types/*",
                "src/lib/*",
                "src/*"
            ],
            "lodash/*": [
                "node_modules/@types/lodash-es/*"
            ]
        },
        "experimentalDecorators": true,
        "pretty": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
    ]
}